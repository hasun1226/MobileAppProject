<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">#474747</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="SignupButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:typeface">sans-serif-light</item>
        <item name="android:textColor">#474747</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="homePageButton">
        <item name="android:background">#95d8e9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:typeface">sans_serif</item>
    </style>

    <style name="sectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#474747</item>
        <item name="android:background">#95d8e9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:typeface">sans_serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:typeface">sans_serif</item>
    </style>

    <style name="menuItem">
        <item name="android:textSize">15sp</item>
        <item name="android:background">#474747</item>
        <item name="android:typeface">sans_serif</item>
    </style>

    <style name="input">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
